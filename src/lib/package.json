{
  "name": "react-toast-package",
  "version": "1.0.1",
  "description": "Highly customizable and light weight react toast component üçû ",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run copy-css",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "prepublishOnly": "npm run build",
    "copy-css": "copyfiles ./toast-style.css dist/esm && copyfiles ./toast-style.css dist/cjs"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "copyfiles": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.0.2"
  },
  "files": [
    "/dist"
  ]
}
